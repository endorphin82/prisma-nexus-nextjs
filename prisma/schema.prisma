generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Album {
  artist_id Int?
  id        Int     @default(autoincrement()) @id
  name      String
  year      String?
  Artist    Artist? @relation("Album_artist_idToArtist", fields: [artist_id], references: [id])

  @@index([artist_id], name: "Album_Artist_id_fk")
}

model Artist {
  id    Int     @default(autoincrement()) @id
  name  String
  url   String?
  Album Album[] @relation("Album_artist_idToArtist")
}